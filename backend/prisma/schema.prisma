generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String

  @@map("users")
}

model Product {
  id                  Int                   @id @default(autoincrement())
  code                String
  ean                 String?
  description         String?
  createdAt           DateTime              @default(now()) @map("created_at")
  updatedAt           DateTime              @updatedAt @map("updated_at")
  importer            Importer              
  productsOnContainer ProductsOnContainer[] 
  productsOnStock     ProductsOnStock[]

  @@map("products")
}

enum Importer {
  ATTUS_BLOOM
  ATTUS
  ALPHA_YNFINITY
  
  @@map("importers")
}

model Container {
  id                  String                @id @unique
  createdAt           DateTime              @default(now()) @map("created_at")
  updatedAt           DateTime              @updatedAt @map("updated_at")
  productsOnContainer ProductsOnContainer[]

  @@map("containers")
}

model ProductsOnContainer {
  id               Int       @id @default(autoincrement())
  containerId      String    @map("container_id")
  productId        Int       @map("product_id")
  quantityExpected Int
  quantityReceived Int
  container       Container @relation(fields: [containerId], references: [id], map: "ProductsOnContainer_container_id_fkey")
  product         Product   @relation(fields: [productId], references: [id], map: "ProductsOnContainer_product_id_fkey")
  observation     String?
  createdAt        DateTime  @default(now()) @map("created_at")

  @@index([containerId], map: "ProductsOnContainer_container_id_fkey")
  @@index([productId], map: "ProductsOnContainer_product_id_fkey")
  @@map("products_on_container")
}

model ProductsOnStock {
  id              Int       @id @default(autoincrement())
  productId       Int       @map("product_id")
  quantity        Int
  product        Product   @relation(fields: [productId], references: [id], map: "ProductsOnStock_product_id_fkey")
  stock           Stock

  @@index([productId], map: "ProductsOnStock_product_id_fkey")
  @@map("products_on_stock")
}

enum Stock {
  GALPAO
  LOJA

  @@map("stocks")
}